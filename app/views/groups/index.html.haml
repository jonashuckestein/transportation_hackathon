- add_body_class "groups"
.container
  .row
    - @groups.each do |group|
      .col-sm-4
        .group
          .users
            - group.users.each_with_index do |u, i|
              .user{class: "user#{i}"}
                .image
                  = image_tag "profile/#{u.profile_image}"
                .name= u.name

          .details
            #{group.description} at #{group.leave_at.to_s(:time)}

